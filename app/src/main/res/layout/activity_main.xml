<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020607"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ImageView (already present) -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="412dp"
        android:layout_height="744dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/intro45jpg" />

    <!-- View (already present) -->
    <View
        android:id="@+id/view"
        android:layout_width="451dp"
        android:layout_height="152dp"
        android:background="#06323A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <!-- Button for Login (already present) -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="248dp"
        android:layout_height="69dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#08181A"
        android:onClick="onLoginClick"
        android:text="Login"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <!-- Button for Register (already present) -->
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="247dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#08181A"
        android:onClick="onRegisterClick"
        android:text="Register"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin" />

    <!-- TextView for Resort Name (already present) -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="LuxeVista Resort"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:layout_editor_absoluteX="16dp" />

    <!-- Spinner for room type -->
    <Spinner
        android:id="@+id/roomTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- ListView for displaying rooms -->
    <ListView
        android:id="@+id/roomListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/roomTypeSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
